.container {
  width: 100%;
  height: 100%;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal {
  width: 80%;
  background-color: #fff;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
}

.modal-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.modal-message {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.modal-countdown {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.modal-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
}

.modal-button {
  font-size: 28rpx;
  color: #fff;
  background-color: #4a90e2;
  border-radius: 4px;
  padding: 10rpx 24rpx;
}
