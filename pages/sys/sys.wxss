  z-index: -1;


}

.c1{
  width: 27%;
  height: 220rpx;
  margin-left: 5%;
  margin-top: 10%;


}





.tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 25rpx;
}

.hide {
  opacity: 0;
  transition: opacity 0.5s;
}

.show {
  opacity: 1;
  transition: opacity 0.5s;
}
